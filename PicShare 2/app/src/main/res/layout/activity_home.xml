<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DarkShow"
    android:orientation="vertical"
    tools:context=".activity.activity.HomeActivity">

    <com.example.picshare.activity.view.FixViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <!--  权重设置为1，高度为零，因为下面的TabLayout高度固定
          这样设置可以让整个ViewPager占满剩下整个页面  -->

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/commonTabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_66dp"
        android:background="@color/Lightwhite"
        tl:tl_iconHeight="23dp"
        tl:tl_iconWidth="23dp"
        tl:tl_indicator_color="@color/Main_Theme"
        tl:tl_indicator_height="0dp"
        tl:tl_textSelectColor="@color/Main_Theme"
        tl:tl_textUnselectColor="#66000000"
        tl:tl_textsize="@dimen/dimen_12sp"
        tl:tl_underline_color="@color/Lightwhite"
        tl:tl_underline_height="1dp"/>



</LinearLayout>